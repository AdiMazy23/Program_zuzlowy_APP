<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comarch_speedway">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.package.name.MainActivity"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RidersListActivity">
            <intent-filter>
                <action android:name="com.package.name.RidersListActivity"/>
            </intent-filter>
        </activity>

        <activity android:name=".RidersListActivity_GUESTS">
            <intent-filter>
                <action android:name="com.package.name.RidersListActivity"/>
            </intent-filter>
        </activity>

            <activity android:name=".Choose_1or2">
                <intent-filter>
                    <action android:name="com.package.name.Choose_1or2"/>
                </intent-filter>
            </activity>

        <activity android:name=".SimpleHeat">
            <intent-filter>
                <action android:name="com.package.name.SimpleHeat"/>
            </intent-filter>
        </activity>
    </application>

</manifest>